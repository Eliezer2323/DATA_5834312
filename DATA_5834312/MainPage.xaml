<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:DATA_5834312"
             x:Class="DATA_5834312.MainPage">
    

    <ContentPage.BindingContext>
        <local:Alumnos/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Margin="20,20,20,20">
            <Entry x:Name="NombreAlumno" Text="{Binding name}" Placeholder="Ingrese su nombre"/>
            <Label Text="{Binding MostrarNombre}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
